+#!/bin/sh
+export	GCCROOT=/home/ulf/projects/OE_atmel/build/tmp-angstrom_2008_1/sysroots/i686-linux/usr/armv5te/bin
+export	PATH=${GCCROOT}:${PATH}
+export	CROSS_COMPILE=${GCCROOT}/arm-angstrom-linux-gnueabi-
