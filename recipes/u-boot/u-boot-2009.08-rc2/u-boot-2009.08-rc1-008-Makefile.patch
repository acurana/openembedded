+else
+BINARY := u-boot
+BINARY_BIN := $(obj)$(BINARY).bin
+BINARY_GZ  := $(obj)$(BINARY).gz
+endif
+
+ifeq ($(DESTDIR),)
+DESTDIR=binaries
+endif
+
 all:		$(ALL)
 
 $(obj)u-boot.hex:	$(obj)u-boot
