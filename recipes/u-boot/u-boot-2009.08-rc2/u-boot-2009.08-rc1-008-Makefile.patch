+$(BINARY_BIN):	$(obj)u-boot
 		$(OBJCOPY) ${OBJCFLAGS} -O binary $< $@
 
+$(BINARY_GZ):	$(BINARY_BIN)
+		gzip -c $(BINARY_BIN) > $(BINARY_GZ)
+
+install:	all
+		-install -d	$(DESTDIR)
+		install		$(BINARY_BIN)	$(DESTDIR)
+
+tftp:		install
+		cp $(BINARY_GZ)				$(TFTPBOOT)/$(BINARY).gz
+		cp $(BINARY_BIN) 			$(TFTPBOOT)/$(BINARY).bin
+
